<h1 class="h3 mb-3">
    <%= title %>
</h1>
<div class="card py-3">
    <div class="card-header">
        <div class="row" style="vertical-align: middle;">
            <div class="col-md-9">
                <h2 class="h4 ml-2 mb-0">
                    <%= val.title %>
                </h2>
            </div>
            <div class="col-md-3 h-100">
                <div class="mr-2">
                    <ul class="mb-0 p-0">
                        <li class="mb-0" style="list-style:none;">作成日：<%= val.created_at %></li>
                        <li class="mb-0" style="list-style:none;">
                            更新日：
                            <% if(val.updated_at === null){%>
                                <span class="px-1">-</span>
                            <%}else{%>
                                <%= val.updated_at %>
                            <%}%>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <hr class="mt-1 mb-3">
        <div class="tag-wrapper">
            <div class="tag d-flex w-100 justify-content-start">
                <ul>
                    <%var key_array = ['due_date', 'due_time', 'class', 'priority', 'status', 'repeat']; %>
                    <%var key_jan_array = ['〆', '〆', '', '優先度 ', '', '']; %>
                    <% for(var i in key_array){%>
                        <%if(val[key_array[i]] != null){%>
                            <li class="m-0"><span class="badge badge-pill badge-primary"><%= key_jan_array[i] %><%= val[key_array[i]] %></span></li>
                        <%}%>
                    <%}%>                
                </ul>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="px-5" style="min-height: 50px; white-space:pre-wrap;"><% if(val.memo == ""){%>メモはありません。<%}else{%><%= val.memo %><%}%></div>
    </div>
    <div class="text-center py-3">
        <div class="d-inline-block">
            <a href="/boards/status/<%= val.user_id %>/<%= val.id %>/未完了" id="s-btn" class="btn btn-success mr-3">完了<a></a>
            <a href="/boards/edit/<%= val.user_id %>/<%= val.id %>" class="btn btn-primary">編集<a>
        </div>                
    </div>
</div>

<script>
    // 完了ボタン押下時の確認ポップアップ表示
    $('#s-btn').click(function(){
        if(confirm('このリストを完了にしますか？')){

        }else{
            return false;
        }
    });
</script>